<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="OpenGL"
                android:textColor="#000" />

            <TextView
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="view1"
                android:textColor="#000" />


            <TextView
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="贝塞尔曲线"
                android:textColor="#000" />

            <TextView
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="path op"
                android:textColor="#000" />


            <TextView
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="矩阵"
                android:textColor="#000" />

            <TextView
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="蛛网"
                android:textColor="#000" />

            <TextView
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="point"
                android:textColor="#000" />


            <TextView
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="手势"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="test"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Litho"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="behavior"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="粒子"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="JustifyText"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="MotionLayout"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="MotionCoordinator"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="一些新的view"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="SharedElement"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="ConstraintLayout"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="CoordinatorLayout"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="View7Activity"
                android:textColor="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/view20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="phoneWindow"
                android:textColor="#000"
                android:visibility="visible" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>